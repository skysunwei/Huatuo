<h1>Listing books</h1>

<table>
  <tr>
    <th>User</th>
    <th>Sub apartment</th>
    <th>Book date</th>
    <th>Book num</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @books.each do |book| %>
  <tr>
    <td><%= book.user.username %></td>
    <td><%= book.sub_apartment.name %></td>
    <td><%= book.book_date %></td>
    <td><%= book.book_num %></td>
    <td><%= link_to 'Show', book %></td>
    <td><%= link_to 'Edit', edit_book_path(book) %></td>
    <td><%= link_to 'Destroy', book, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

